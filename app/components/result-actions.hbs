<div
  class="flex sm:flex-row flex-col space-y-4 sm:space-x-4 mt-8 w-full px-8 sm:justify-center items-center sm:space-y-0"
>
  <LinkTo class="sm:w-fit w-full" @route="play" @query={{hash reset=false}}>
    <button
      class="sm:w-fit w-full text-sm rounded bg-gray-200 text-black px-4 py-2"
      type="button"
    >See board</button>
  </LinkTo>

  <LinkTo
    data-test-id="play-again-btn"
    class="sm:w-fit w-full"
    @route="play"
    @query={{hash reset=true}}
  >
    <button
      class="sm:w-fit w-full text-sm rounded bg-gray-400 text-white px-4 py-2"
      type="button"
    >Play again</button>
  </LinkTo>

  <LinkTo data-test-id="back-main-btn" class="sm:w-fit w-full" @route="welcome">
    <button
      class="sm:w-fit w-full text-sm rounded bg-gray-800 text-white px-4 py-2"
      type="button"
    >Back to main screen</button>
  </LinkTo>
</div>