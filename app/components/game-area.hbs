<div class="flex flex-col items-center w-full px-8">
  {{! information area }}
  <div class="w-full sm:w-[600px] flex justify-between pb-8 items-center">
    <PlayerTurn @player={{this.game.currentPlayer}} />

    <button
      class="bg-gray-500 text-white sm:py-2 sm:px-4 py-1 px-2 rounded text-sm sm:text-2xl"
      type="button"
      {{on "click" this.resetGame}}
    >
      Reset game
    </button>
  </div>
  {{! information area }}

  {{! game area }}
  <div class="w-full h-full sm:w-[600px] sm:h-[600px] flex flex-wrap">
    {{#each this.game.board as |cell index|}}
      <GameCell
        @test-id={{index}}
        @value={{cell}}
        @onClick={{fn this.makeMove index}}
      />
    {{/each}}
  </div>
  {{! game area }}
</div>